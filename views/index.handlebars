<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <img class="burger-img center mb-2" src="./assets/img/burger.jpg" alt="burger">
      <h1 class="text-center pb-3">Eat-Da-Burger! Restaurant</h1>

      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

      <h2>Burgers that are devoured!</h2>

      <ul class="text-muted sold-out">
        {{#each burger}}
        {{#if devoured}}
        {{> burger/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>

      <section class="burger-form mb-5">

        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group add-burger-form">
            <label for="add-burger">Burgers Name:</label>
            <textarea type="text" id="add-burger" name="add-burger"></textarea>
          </div>

          <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Not Devoured
          </div>

          <button class="btn btn-success all-caps" type="submit">Add Burger</button>
        </form>
      </section>
    </div>
  </div>
</div>